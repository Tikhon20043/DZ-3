#include <iostream>

int main() {
    int day;

    // Запрос у пользователя ввода числа от 1 до 7
    std::cout << "Введите номер дня недели (1 - Понедельник, 7 - Воскресенье): ";
    std::cin >> day;

    // Используем оператор switch для определения дня недели
    switch (day) {
        case 1:
            std::cout << "Понедельник" << std::endl;
            break;
        case 2:
            std::cout << "Вторник" << std::endl;
            break;
        case 3:
            std::cout << "Среда" << std::endl;
            break;
        case 4:
            std::cout << "Четверг" << std::endl;
            break;
        case 5:
            std::cout << "Пятница" << std::endl;
            break;
        case 6:
            std::cout << "Суббота" << std::endl;
            break;
        case 7:
            std::cout << "Воскресенье" << std::endl;
            break;
        default:
            // Обработка случая, если число не от 1 до 7
            std::cout << "Ошибка: введите число от 1 до 7." << std::endl;
            break;
    }

    return 0;
}
