//Напишите программу, которая возводит число 2 в степень 10 с помощью цикла while.

#include <iostream>

int main() {
    int base = 2;      // Основание
    int exponent = 10; // Степень
    int result = 1;    // Переменная для хранения результата
    int count = 0;     // Счетчик для цикла

    // Цикл while для возведения в степень
    while (count < exponent) {
        result *= base; // Умножаем результат на основание
        count++;        // Увеличиваем счетчик
    }

    // Вывод результата
    std::cout << "2 в степени 10 равно: " << result << std::endl;

    return 0;
}
