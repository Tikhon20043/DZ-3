//Напишите программу, которая запрашивает у пользователя целое число n и выводит на экран все четные числа от 0 до n включительно.


#include <iostream>
using namespace std;

int main() {
    int n;
    cout << "Введите целое число n: ";
    cin >> n;

    for (int i = 0; i <= n; i += 2) {
        cout << i << " ";
    }

    cout << endl;
    return 0;
}
